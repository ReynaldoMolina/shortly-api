{
  "rewrites": [
    {
      "source": "/",
      "destination": "/api"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],

  "builds": [
    {
      "src": "/api/index.js",
      "use": "@now/node"
    }
  ],

  "routes": [
    {
      "src": "/([A-Za-z0-9_-]+)$",
      "dest": "/api/index.js?id=$1"
    }
  ]
}